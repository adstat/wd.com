/* pages/viewpoint-box/topic_details/topic_details.wxss */
page {
  background: #f5f5f5;
}
.clear:after {
  content: '';
  width: 0;
  height: 0;
  display: block;
  clear: both;
  overflow: hidden;
}

.top{
  width: 100%;
  height: 380rpx;
  background: #fff;
  position: relative
}
.top>image{
  width: 100%;
  height: 380rpx;
}
.menceng{
  background: rgba(0,0,0,0.58);
  width: 100%;
  height: 380rpx;
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content:center;
  box-sizing: border-box;
  padding-top: 40rpx;
  top: 0;
}
.menceng>view:nth-child(1){
  margin-bottom: 40rpx;
  font-size: 36rpx;
  color: #fff;
  font-weight: bold;
}
.menceng>view:nth-child(2){
  font-size: 24rpx;
  color: #fff;
}
.menceng>image{
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  width: 50rpx;
  height: 50rpx;
}
.tab_contont{
  margin-bottom: 150rpx;
}
.tab_top{
  width: 100%;
  height: 88rpx;
  background: #fff; 
  margin-top: 20rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content:center;
}
.tab_top>view{
  font-size: 28rpx;
  color: #999;
  box-sizing: border-box;
  border-bottom: 6rpx solid #fff;
  line-height: 82rpx;
}
.tab_top>view:nth-child(1){
  margin-right: 220rpx;
}
.tab_top_clear{
  border-bottom: 6rpx solid #2577E3!important;
  color: #2577E3!important;
}


.sort_content{
  width: 100%;
  background: #fff;
  box-sizing: border-box;
  padding: 0 23rpx;
  margin-bottom: 25rpx;
}
.sort_content_tit{
  width: 100%;
  height: 70rpx;
  padding-top: 35rpx;
  display: flex;
  align-items: center;
  justify-content:space-between;
}
.sort_content_tit>image{
  width: 60rpx;
  height: 60rpx;
}
.sort_content_tit_left>image{
  width: 70rpx;
  height: 70rpx;
  border-radius: 35rpx;
  float: left;
}
.xinxi{
  float: left;
  display: flex;
  flex-direction: column;
  justify-content:center;
  margin-left: 17rpx;
}
.xinxi>view{
  line-height: 100%;
}
.sort_content_name{
  font-size: 28rpx;
  color: #2577E3;
  line-height: 100%;
}
.sort_content_zw{
  font-size: 22rpx;
  line-height: 100%;
  color: #999;
  margin-left: 17rpx;
}
.time{
  font-size: 22rpx;
  line-height: 100%;
  color: #999;
  margin-top: 6rpx;
}
.sort_content_pl>span{
  color: #FF9913;
  font-size: 28rpx;
  padding-right: 20rpx;
}
.sort_content_pl{
  margin-top: 28rpx;
  padding-bottom: 40rpx;
  font-size: 30rpx;
  color: #666;
  box-sizing: border-box;
  border-bottom:1rpx solid #e9e9e9;
  line-height: 50rpx;
}
.sort_content_cz{
  margin: 0 auto;
  width: 90%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content:space-between;
}
.dz{
  display: flex;
}
.dz>image{
  color: #000;
  width: 38rpx;
  height: 38rpx;
}
.dz>span{
  font-size: 24rpx;
  color: #999;
  line-height: 38rpx;
  margin-left: 13rpx;
}
.sc>image{
    width: 37rpx;
    height: 37rpx;
}
.zf>image{
  width: 34rpx;
  height: 36rpx;
}
.tupian>image{
  margin-top: 30rpx;
  width: 190rpx;
  height: 128rpx;
  float: left;
  margin-right: 15rpx;
  border-radius: 12rpx;
}
.fabu{
  position: fixed;
  bottom: 15rpx;
  left: 24rpx;
  width: 702rpx;
  height: 88rpx;
  border-radius: 44rpx;
  background: linear-gradient(to left,#2677E2,#409AFF);
  text-align: center;
  color: #fff;
  line-height: 88rpx;
  font-size: 32rpx;
}