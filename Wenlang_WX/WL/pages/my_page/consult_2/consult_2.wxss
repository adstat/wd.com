/* pages/my_page/consult_2/consult_2.wxss */
page {
  width: 100%;
  background: #f5f5f5;
  height: 100%;
  box-sizing: border-box;
}
.clear:after {
  content: '';
  width: 0;
  height: 0;
  display: block;
  clear: both;
  overflow: hidden;
}


.top{
  background: #fff;
  width: 100%;
  height: 264rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content:center;
  margin-bottom: 20rpx;
}
.top>image{
  width: 128rpx;
  height: 128rpx;
}
.top>view{
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-top: 15rpx;
}
.top>view>text{
  color: #FE6261;
}
.box{
  width: 100%;
  background: #fff;
}
.box>view:nth-child(1){
  box-sizing: border-box;
  width: 100%;
  padding-left: 25rpx;
  display: flex;
  align-items: center;
  padding-top: 30rpx;
}
.box>view:nth-child(1)>image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
}
.box>view:nth-child(1)>text{
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  margin-left: 20rpx;
}
.box>view:nth-child(2){
  width: 100%;
  box-sizing: border-box;
  padding: 25rpx;
  font-size: 30rpx;
  color: #666;
}
.box>view:nth-child(3){
  width: 100%;
  text-align: right;
  padding-right: 25rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #999;
  padding-bottom: 30rpx;
}