/* pages/my_page/personal_data/personal_data.wxss */
page {
  background: #f5f5f5;
}
.clear:after {
  content: '';
  width: 0;
  height: 0;
  display: block;
  clear: both;
  overflow: hidden;
}
.tx_box{
  margin-top: 24rpx;
  margin-bottom: 24rpx;
  background: #fff;
  display: flex;
  justify-content:space-between;
  align-items: center;
  width: 100%;
  height: 125rpx;
  box-sizing: border-box;
  padding-left: 24rpx;
  padding-right: 45rpx;
}
.tx_box>text{
  font-size: 32rpx;
  color: #333;
}
.tx_box>image{
  width: 90rpx;
  height: 90rpx;
  border-radius: 45rpx;
}

.xx_box{
  width: 100%;
}
.xx_box_1{
  background: #fff;
  width: 100%;
  height: 100rpx;
  border-bottom: 1rpx solid #e9e9e9;
  display: flex;
  justify-content:space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 0 25rpx 0 24rpx;
}
.xx_box_1>text{
  font-size: 32rpx;
  color: #333
}
.xx_box_1>view{
  display: flex;
  align-items: center;
}
.xx_box_1>view>text{
  font-size: 28rpx;
  color: #999;
  line-height: 100rpx;
}
.xx_box_1>view>image{
  width: 38rpx;
  height: 38rpx;
  padding-top: 4rpx;
  margin-left: 10rpx;
}
.top_box{
  margin-top: 23rpx;
}
.baoc{
  width: 702rpx;
  height: 88rpx;
  border-radius: 44rpx;
  background: linear-gradient(to left, #2677E2 , #409AFF);
  text-align: center;
  line-height: 88rpx;
  font-size: 38rpx;
  color: #fff;
  margin: 220rpx auto 17rpx;
}