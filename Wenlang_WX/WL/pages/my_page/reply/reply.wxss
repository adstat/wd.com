/* pages/my_page/reply/reply.wxss */
page {
  background: #f5f5f5;
}
.clear:after {
  content: '';
  width: 0;
  height: 0;
  display: block;
  clear: both;
  overflow: hidden;
}


.fabu_box{
  width: 100%;
  height: 874rpx;
  background: #fff;
  box-sizing: border-box;
  padding: 45rpx 24rpx;
}
.fabu_box>textarea{
  width: 100%;
  height: 600rpx;
  font-size: 32rpx;
  color: #333;
  padding: 15rpx;
  box-sizing: border-box;
}
.sctp{
  width: 150rpx;
  height: 150rpx;
  border: 1rpx solid #dddddd;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content:center;
}
.sctp>image{
  width: 56rpx;
  height: 55rpx;
}
.sctp>view{
  font-size: 24rpx;
  color: #999;
}
.fabu{
  position: fixed;
  bottom: 15rpx;
  left: 24rpx;
  width: 702rpx;
  height: 88rpx;
  border-radius: 44rpx;
  background: linear-gradient(to left,#2677E2,#409AFF);
  text-align: center;
  color: #fff;
  line-height: 88rpx;
  font-size: 32rpx;
}