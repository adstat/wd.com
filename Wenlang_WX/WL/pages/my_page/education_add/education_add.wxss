/* pages/my_page/education_add/education_add.wxss */
page {
  width: 100%;
  background: #f5f5f5;
  height: 100%;
  box-sizing: border-box;
  padding-top: 25rpx;
}
.clear:after {
  content: '';
  width: 0;
  height: 0;
  display: block;
  clear: both;
  overflow: hidden;
}

.box{
  width: 100%;
  background: #fff;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e9e9e9;
  display: flex;
  align-items: center;
  height: 110rpx;
}
.box>input{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding-left: 25rpx;
  font-size: 32rpx;
  color: #999;
}
.bc{
  width: 702rpx;
  height: 88rpx;
  border-radius: 44rpx;
  background: linear-gradient(to left, #2677E2 , #409AFF);
  text-align: center;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #fff;
  position: fixed;
  bottom: 15rpx;
  left: 25rpx;
}