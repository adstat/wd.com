/* pages/my_page/answer_master/answer_master.wxss */
page {
  width: 100%;
  background: #f5f5f5;
  height: 100%;
  box-sizing: border-box;
  padding-top: 25rpx;
}
.clear:after {
  content: '';
  width: 0;
  height: 0;
  display: block;
  clear: both;
  overflow: hidden;
}


.suib{
  width: 100%;
  height: 110rpx;
  display: flex;
  justify-content:space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 0 24rpx;
  background: #fff;
  border-bottom: 1rpx solid #e9e9e9;
}
.suib_left{
  font-size: 32rpx;
  color: #333;
}
.suib_right{
  display: flex;
  /* flex-direction: column; */
  align-items: center;
  justify-content:center;
}
.suib_right>view{
  display: flex;
  /* flex-direction: column; */
  align-items: center;
  justify-content:center;
}
.guan{
  font-size: 32rpx;
  color: #333;
  margin-left: 15rpx;
  line-height: 36rpx;
}
.guan_box{
  width: 36rpx;
  height: 36rpx;
  border-radius: 18rpx;
  border: 1rpx solid #e9e9e9;
  box-sizing: border-box;
}
.kai{
  font-size: 32rpx;
  color: #333;
  margin-left: 15rpx;
  line-height: 36rpx;
}
.kai_box{
  width: 36rpx;
  height: 36rpx;
  border-radius: 18rpx;
  box-sizing: border-box;
  position: relative;
}
.kai_box>image{
  width: 36rpx;
  height: 36rpx;
  border-radius: 18rpx;
  border: none;
  position: absolute;
  top: 0;
  left: 0;
}
.suib_right>view:nth-child(2){
  margin-left: 42rpx;
}
.suib_lefts>view:nth-child(1){
  font-size: 32rpx;
  color: #333;
}
.suib_lefts>view:nth-child(2){
  font-size: 22rpx;
  color: #FE6261;
}
.yuan{
  font-size: 32rpx;
  color: #333;
}
.dzms{
  width: 100%;
  background: #fff;
}
.dzms>view{
  font-size: 32rpx;
  color: #333;
  padding-top: 40rpx;
  margin-left: 24rpx;
  padding-bottom: 35rpx;
}
.dzms>textarea{
  width: 663rpx;
  height: 220rpx;
  margin-left: 52rpx;
  background: #f5f5f5;
  font-size: 32rpx;
  border-radius: 12rpx;
  color: #666;
  box-sizing: border-box;
  padding: 25rpx 35rpx 0 49rpx;
}
.bc{
  width: 702rpx;
  height: 88rpx;
  border-radius: 44rpx;
  background: linear-gradient(to left, #2677E2 , #409AFF);
  text-align: center;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #fff;
  position: fixed;
  bottom: 15rpx;
  left: 25rpx;
}