/* pages/my_page/follow/follow.wxss */
page {
  background: #f5f5f5;
}
.clear:after {
  content: '';
  width: 0;
  height: 0;
  display: block;
  clear: both;
  overflow: hidden;
}

.list{
  width: 100%;
  background: #fff;
}
.box{
  width: 100%;
  height: 150rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #e9e9e9;
  display: flex;
  justify-content:space-between;
  align-items: center;
  padding: 0 26rpx 0 22rpx;
}
.box>image{
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
}
.xinxi{
  width: 570rpx;
  height: 100%;
  display: flex;
  justify-content:space-between;
  align-items: center;
  box-sizing: border-box;
}
.xinxi>view:nth-child(2){
  width: 134rpx;
  height: 60rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #999;
}
.name{
  font-size: 32rpx;
  color: #444;
  font-weight: bold;
}
.geren{
  width: 184rpx;
  height: 40rpx;
  color: #999;
  font-size: 26rpx;
}
.wei{
  color: #2476E3!important;
}