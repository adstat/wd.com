/* pages/my_page/money/money.wxss */
page {
  background: #f5f5f5;
}
.clear:after {
  content: '';
  width: 0;
  height: 0;
  display: block;
  clear: both;
  overflow: hidden;
}

.top{
  width: 100%;
  height: 275rpx;
  background: linear-gradient(to left, #2677E2 , #409AFF);
  position: relative;
  margin-bottom: 109rpx;
}
.top_cc{
  position: absolute;
  top: 70rpx;
  left: 54rpx;
  width: 642rpx;
  height: 314rpx;
  background: #fff;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content:center;
  padding-bottom: 30rpx;
  box-sizing: border-box;
}
.top_cc>view:nth-child(1)>text:nth-child(1){
  font-size: 100rpx;
  color: #333;
  font-weight: bold;
}
.top_cc>view:nth-child(1)>text:nth-child(2){
  font-size: 32rpx;
  color: #333;
}
.top_cc>view:nth-child(2){
  font-size: 28rpx;
  color: #333;
  margin-bottom: 40rpx;
}
.top_cc>view:nth-child(3){
  background: linear-gradient(to left, #2677E2 , #409AFF);
  width: 209rpx;
  height: 62rpx;
  border-radius: 31rpx;
  text-align: center;
  line-height: 62rpx;
  color: #fff;
  font-size: 28rpx;
}
.boxs{
  margin-top: 149rpx;
}
.box_tit{
  display: flex;
  justify-content:space-between;
  align-items: center;
  box-sizing: border-box;
  width: 100%;
  padding-left: 23rpx;
  padding-right: 34rpx;
}
.box_tit>image{
  width: 60rpx;
  height: 60rpx;
}
.box_tit>view>view{
  font-size: 32rpx;
  color: #333;
}
.xia>text{
  font-size: 22rpx;
  color: #999;
}
.xia>text:nth-child(2){
  margin-left: 28rpx;
}
.list{
  width: 100%;
  height: 100%;
  background: #fff;
}



.box{
  width: 100%;
  height: 140rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e9e9e9;
  display: flex;
  justify-content:space-between;
  align-items: center;
  padding: 0 24rpx;
}
.box>image{
  width: 70rpx;
  height: 70rpx;
  border-radius: 35rpx;
}
.xinxi{
  width: 610rpx;
  height: 100%;
  display: flex;
  justify-content:space-between;
  align-items: center;
  box-sizing: border-box;
}

.name{
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}
.geren{
  color: #999;
  font-size: 24rpx;
}
.jia{
  font-size: 32rpx;
  color: #FE6261;
  font-weight: bold;
}
.jian{
  font-size: 32rpx;
  color: #999;
  font-weight: bold;
}