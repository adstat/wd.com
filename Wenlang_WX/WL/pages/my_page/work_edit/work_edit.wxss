page {
  width: 100%;
  background: #f5f5f5;
  height: 100%;
  box-sizing: border-box;
  padding-top: 25rpx;
}
.clear:after {
  content: '';
  width: 0;
  height: 0;
  display: block;
  clear: both;
  overflow: hidden;
}

.box{
  width: 100%;
  background: #fff;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e9e9e9;
  display: flex;
  align-items: center;
  height: 110rpx;
}
.box>input{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding-left: 25rpx;
  font-size: 32rpx;
  color: #333;
}
.cz{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content:center;
  height: 88rpx;
}
.cz>view{
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
}
.cz>view:nth-child(1){
  background: #fff;
  font-size: 32rpx;
  color: #666;
  width: 45%;
}
.cz>view:nth-child(2){
  background: linear-gradient(to left, #2677E2 , #409AFF);
  font-size: 32rpx;
  color: #fff;
  width: 55%;
}