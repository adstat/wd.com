page {
  background: #f5f5f5;
}
.clear:after {
  content: '';
  width: 0;
  height: 0;
  display: block;
  clear: both;
  overflow: hidden;
}


.box{
  width: 100%;
  height: 808rpx;
  background: #fff;
  margin-top: 25rpx;
  box-sizing: border-box;
  padding: 40rpx 25rpx;
}
.box>textarea{
  width: 100%;
  height: 100%;
  font-size: 32rpx;
  color: #999;
  line-height: 40rpx;
}
.bc{
  width: 702rpx;
  height: 88rpx;
  border-radius: 44rpx;
  background: linear-gradient(to left, #2677E2 , #409AFF);
  text-align: center;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #fff;
  position: fixed;
  bottom: 15rpx;
  left: 25rpx;
}